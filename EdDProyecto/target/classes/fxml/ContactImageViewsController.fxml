<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ContactImageViewsController">
    <children>
        <!-- VBox para organizar los elementos verticalmente -->
        <VBox layoutX="20.0" layoutY="20.0" spacing="10">

            <!-- Sección de Nombre del Contacto -->
            <HBox spacing="10">
                <Label text="Nombre del Contacto:" />
                <Label fx:id="setName" prefHeight="20.0" prefWidth="210.0" />
                                       
            </HBox>
            
            <HBox spacing="10">
                <Label text="Numero del Contacto:" />
                <Label fx:id="setNumber" prefHeight="20.0" prefWidth="210.0" />
                                       
            </HBox>
            <HBox spacing="10">
                <Label text="Country:" />
                <Label fx:id="setCountry" prefHeight="20.0" prefWidth="210.0" />
                                       
            </HBox>
            <HBox spacing="10">
                <Label text="Email:" />
                <Label fx:id="setEmail" prefHeight="20.0" prefWidth="210.0" />
                                       
            </HBox>
            <HBox spacing="10">
                <Label text="Adrres:" />
                <Label fx:id="setAdrres" prefHeight="20.0" prefWidth="210.0" />
                                       
            </HBox>
            
            
            <HBox spacing="10">
                    <Label fx:id="a" text="Apellido:" visible="false" />
                    <Label fx:id="lastNameField" prefHeight="20.0" prefWidth="210.0" visible="false" />
                  
                </HBox>
                <HBox spacing="10">
                    <Label fx:id="b" text="Número de Trabajo:" visible="false" />
                    <Label fx:id="workNumberField" prefHeight="20.0" prefWidth="210.0" visible="false" />
                    
                </HBox>
                <HBox spacing="10">
                    <Label fx:id="c" text="Correo Electrónico de Trabajo:" visible="false" />
                    <Label fx:id="workEmailField" prefHeight="20.0" prefWidth="210.0" visible="false" />
                    
                </HBox>
                <HBox spacing="10">
                    <Label fx:id="d" text="Dirección de Trabajo:" visible="false" />
                    <Label fx:id="workAddressField" prefHeight="20.0" prefWidth="210.0" visible="false" />
                    
                </HBox>
                <HBox spacing="10">
                    <Label fx:id="e" text="Fecha de Nacimiento:" visible="false" />
                    <Label fx:id="nacimiento" prefHeight="20.0" prefWidth="210.0" visible="false" />
                    
                </HBox>

            <!-- Sección de Detalles Específicos de Person -->
           
            
                
        </VBox>
        
            

            

           

           

      
      <!-- ImageView para mostrar la imagen del contacto -->
            <ImageView fx:id="contactImageView" fitHeight="273.0" fitWidth="269.0" layoutX="310.0" layoutY="37.0" />
             <Button fx:id="btnNext" layoutX="463.0" layoutY="360.0" mnemonicParsing="false" onAction="#showNextPhoto" text="Siguiente" />
             <Button fx:id="btnAfter" layoutX="466.0" layoutY="298.0" mnemonicParsing="false" onAction="#showPreviousPhoto" text="Anterior" />
             <Button fx:id="btnDelete" layoutX="201.0" layoutY="335.0" mnemonicParsing="false" onAction="#btnPress" text="Eliminar" />
            
                      <Button fx:id="btnAdd" layoutX="27.0" layoutY="335.0" mnemonicParsing="false" onAction="#btnPress" text="Cargar Imagen" />
        
    </children>
</AnchorPane>
